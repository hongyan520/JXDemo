<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingRight="16dp" >

        <Button
            android:id="@+id/btn_left"
            style="@style/textview_gray16_888888_bold"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_round_gray_bg"
            android:text="PPTX" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_right"
            android:layout_toRightOf="@+id/btn_left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_title"
                style="@style/textview_black16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英语口语英语口语英英语口语英语口语语口语.pptx" />

            <TextView
                android:id="@+id/text_size"
                style="@style/textview_gray14_818181"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="10.3M" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_right"
            style="@style/textview_red16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_outline_red_coner"
            android:paddingBottom="8dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="8dp"
            android:text="下载" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent" android:progress="0"
        android:layout_height="5dp" />

</LinearLayout>