<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"     android:padding="10dp" android:gravity="bottom">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_top_line"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_custom_title"
            style="@style/textview_gray12_8a8a8a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="重中之重重中之重中中之重着这种重中之重重中之重重中之重着这种重中之重重着这种重中之重" />

        <ImageView
            android:id="@+id/img_custom_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#d7d7d7"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/layout_custom_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_custom_last"
        style="@style/textview_red18"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_top_line"
        android:text="取消操作" />

</LinearLayout>