<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/windowTitleRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="59dp"
    android:background="@color/top_bar"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <LinearLayout
        android:id="@+id/layout_return"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/imgview_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/img_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_return"
            style="@style/textview_white14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/formTilte"
        style="@style/Caption_TextView"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="" />

    <!-- 按钮备用 -->

    <LinearLayout
        android:id="@+id/layout_remark"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/imgview_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/top_search"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_right"
            style="@style/textview_white14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>