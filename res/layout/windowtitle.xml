<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/windowTitleRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="59dp"
    android:background="@color/top_bar"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/returnBtn"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/imgview_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@drawable/img_back"
            android:gravity="center" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/index_top_link"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/formTilte"
        style="@style/Caption_TextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.38"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="" />

    <!-- 按钮备用 -->

    <LinearLayout
        android:id="@+id/layout_remark"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.78" 
        android:gravity="center_vertical|right" android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/remarkBtn"
            style="@style/textview_white14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:background="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center" android:text=""
            android:visibility="gone" />
        <!-- 用于图片 -->

        <FrameLayout
            android:id="@+id/remarkImg_layout"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_gravity="center_vertical|right" 
            android:visibility="gone" >

            <ImageView
                android:id="@+id/remarkImg_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false" android:background="@drawable/top_search"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>